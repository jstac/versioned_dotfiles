[manager]
prepend_keymap = [
  { on = [ "<C-s>" ], run = "search fd", desc = "Search files by name using fd" },
  { on = [ "<C-f>" ], run = "search rg", desc = "Search file contents using ripgrep" },
  { on = [ "T" ], run = "plugin --sync max-preview", desc = "Maximize or restore preview" },
]

[input]
prepend_keymap = [
  { on = [ "<C-q>" ], run = "close", desc = "Cancel input" },
]
